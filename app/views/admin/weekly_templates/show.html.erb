<table class="table">
  <thead>
    <tr>
      <td>项目名</td>
      <td>任务名</td>
      <td>工作量(小时)</td>
      <td>状态</td>
    </tr>
  </thead>
  <tbody>
    <% @workflows.each do |workflow| %>
      <tr>
        <td><%= workflow.project.name %></td>
        <td><%= workflow.name %></td>
        <td><%= workflow.hours %></td>
        <td>
          <% case workflow.aasm_state %>
            <% when 'processing' %>
              <i class="fa fa-gavel" aria-hidden="true"> 待确认 </i>
            <% when 'confirmed' %>
              <i class="fa fa-money" aria-hidden="true"> 已确认! </i>
            <% else %>
              <i class="fa fa-question" aria-hidden="true"> Invalid </i>
          <% end %>        
        </td>

      </tr>
    <% end %>
  </tbody>
</table>